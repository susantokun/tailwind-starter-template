{
  "name": "tailwind-starter-template",
  "version": "1.0.0",
  "description": "A starter template for Tailwind CSS.",
  "main": "index.js",
  "scripts": {
    "dev:build": "tailwind build tailwind.config.css -c tailwind.config.js -o src/css/style.css",
    "dev": "npm run dev:build && live-server src --port=8081",
    "prod:build:css": "postcss tailwind.config.css -o dist/css/style.min.css",
    "prod:build:html": "html-minifier --input-dir ./src --output-dir ./dist --collapse-whitespace",
    "build": "npm run prod:build:css && npm run prod:build:html",
    "prod": "live-server dist --port=9091"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/susantokun/tailwind-starter-template.git"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwindtemplate",
    "tailwindstarter"
  ],
  "author": "susantokun <admin@susantokun.com> (http://www.susantokun.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/susantokun/tailwind-starter-template/issues"
  },
  "homepage": "https://github.com/susantokun/tailwind-starter-template#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.1",
    "postcss": "^7.0.27",
    "tailwindcss": "^1.2.0"
  }
}
